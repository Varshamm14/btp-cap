<mvc:View
    controllerName="project1.controller.Login"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <!-- Added unique ID for the App control -->
    <App id="loginApp">
        <!-- Added unique ID for the Page control -->
        <Page id="loginPage" title="Login Page" showHeader="false">
            <!-- Added unique ID for the FlexBox control -->
            <FlexBox
                id="loginFlexBox"
                height="100%"
                alignItems="Center"
                justifyContent="Center">
                <!-- Added unique ID for the Panel control -->
                <Panel
                    id="loginPanel"
                    headerText="Login Page"
                    width="400px"
                    class="sapUiResponsiveMargin">
                    <content>
                        <!-- Added unique ID for the VBox control -->
                        <VBox id="loginVBox" class="sapUiSmallMargin">
                            <!-- Added unique IDs for Label, Input, and Button controls -->
                            <Label id="usernameLabel" text="Username" required="true"/>
                            <Input
                                id="usernameInput"
                                placeholder="Username"
                                class="sapUiSmallMarginBottom"
                                width="350px"
                                value="{loginModel>/username}"/>
                            <Label id="passwordLabel" text="Password" required="true"/>
                            <Input
                                id="passwordInput"
                                placeholder="Password"
                                type="Password"
                                class="sapUiSmallMarginBottom"
                                width="350px"
                                value="{loginModel>/password}"
                                tooltip="Show/Hide Password"/>
                            <Button
                                id="showPasswordButton"
                                icon="sap-icon://show"
                                press="onShowPassword"
                                tooltip="Show/Hide Password"
                                width="50px"/>
                            <Button
                                id="loginButton"
                                text="Login"
                                press="onLoginPress"
                                class="sapUiSmallMarginBottom"
                                width="300px"/>
                        </VBox>
                    </content>
                </Panel>
            </FlexBox>
        </Page>
    </App>
</mvc:View>
